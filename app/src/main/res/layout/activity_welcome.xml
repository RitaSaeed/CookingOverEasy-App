<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".Welcome">

    <ImageView
        android:id="@+id/welcomebackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/welcomeBackgroundDesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:scaleX="1.4"
        android:scaleY="1.4"
        app:srcCompat="@drawable/welcomebackgroundnoodles" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfair"
        android:text="WELCOME"
        android:textColor="@color/lightyellow"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/blurredCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <androidx.cardview.widget.CardView
        android:id="@+id/blurredCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#95ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/welcomebackground"
        app:layout_constraintEnd_toEndOf="@+id/welcomebackground"
        app:layout_constraintStart_toStartOf="@+id/welcomebackground"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.cookingovereasy.BlurLayout
            android:id="@+id/blurLayoutWelcome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blk_blurRadius="4"
            app:blk_fps="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All of your cooking tools in one place"
                android:textColor="@color/lightyellow"
                android:textStyle="bold"
                android:padding="5dp"/>

            <Button
                android:id="@+id/getStartedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="@color/lightyellow"
                android:onClick="openLogin"
                android:text="@string/get_started"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/playfair" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>